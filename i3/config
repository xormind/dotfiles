# bindsym $mod+m exec amixer -q set Master toggle

# change volume or toggle mute
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks 
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 

# Pulse Audio controls 
bindsym $mod+n exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks 
bindsym $mod+p exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym $mod+m exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 


